<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cjw.reactivecommunityproject.web.auth.dao.AuthDAO">
    <select id="selectRcUser" resultType="AuthRcUserVO">
        SELECT `uid`,
               `role_uid`,
               `email`,
               `pw`,
               `state`,
               `accept_user_uid`,
               `name`,
               `nickname`,
               `joined_region`,
               `enabled`,
               `created_utc_at`,
               `updated_utc_at`
        FROM `rc_user`
        WHERE `email` = #{email, jdbcType=VARCHAR}
    </select>

    <select id="isExistUserByEmail" resultType="Boolean">
        SELECT COUNT(*) > 0
        FROM `rc_user`
        WHERE `email` = #{email, jdbcType=VARCHAR}
    </select>

    <select id="isExistUserByNickname" resultType="Boolean">
        SELECT COUNT(*) > 0
        FROM `rc_user`
        WHERE `nickname` = #{nickname, jdbcType=VARCHAR}
    </select>
</mapper>