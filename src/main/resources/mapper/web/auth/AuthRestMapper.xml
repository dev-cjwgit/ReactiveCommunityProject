<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cjw.reactivecommunityproject.web.auth.mapper.AuthRestMapper">
    <select id="selectRcUserByEmail" resultType="AuthRestRcUserVO">
        /*AuthRestMapper.selectRcUserByEmail*/
        SELECT `uid`,
               `role_uid`,
               `email`,
               `pw`,
               `state`,
               `accept_user_uid`,
               `name`,
               `nickname`,
               `joined_region`,
               `enabled`,
               `created_utc_at`,
               `updated_utc_at`
        FROM `rc_manage_user`
        WHERE `email` = #{email, jdbcType=VARCHAR}
    </select>


    <select id="selectRcUserByUserUid" resultType="AuthRestRcUserVO">
        /*AuthRestMapper.selectRcUserByUserUid*/
        SELECT `uid`,
               `role_uid`,
               `email`,
               `pw`,
               `state`,
               `accept_user_uid`,
               `name`,
               `nickname`,
               `joined_region`,
               `enabled`,
               `created_utc_at`,
               `updated_utc_at`
        FROM `rc_manage_user`
        WHERE `uid` = #{uid, jdbcType=VARCHAR}
    </select>

    <select id="isExistUserByEmail" resultType="Boolean">
        /*AuthRestMapper.isExistUserByEmail*/
        SELECT COUNT(*) > 0
        FROM `rc_manage_user`
        WHERE `email` = #{email, jdbcType=VARCHAR}
    </select>

    <select id="isExistUserByNickname" resultType="Boolean">
        /*AuthRestMapper.isExistUserByNickname*/
        SELECT COUNT(*) > 0
        FROM `rc_manage_user`
        WHERE `nickname` = #{nickname, jdbcType=VARCHAR}
    </select>
</mapper>