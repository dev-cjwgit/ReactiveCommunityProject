<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cjw.reactivecommunityproject.common.security.dao.SecurityDAO">
    <select id="selectRoleResourceMapping" resultType="SecurityRoleResourceMapping">
        /* SecurityDAO.selectRoleResourceMapping */
        SELECT `role_uid`,
               `resource_uid`,
               `enabled`
        FROM `rc_manage_role_resource`
        WHERE `role_uid` = #{roleUid, jdbcType=INTEGER}

    </select>
</mapper>